@model ItemAsset
@{
    ViewData["Title"] = "Delete Contact";
    ViewBag.Title = "Delete Contact";
}

<h2>Delete Item</h2>

<p>Are you sure you want to delete the following item?</p>

<div>
    <dl class="row">
        <dt class="col-sm-3">ProductName</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.ProductDescription</dd>
        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.MinimumBidAmount</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.ItemId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Home" asp-action="Asset" class="btn btn-secondary">Cancel</a>
</form>
